---
import HorizontalBarChart, { type ChartItem } from '../components/HorizontalBarChart.astro';
import SimulationMetadata from '../components/SimulationMetadata.astro';
import fs from 'fs';
import path from 'path';

export interface Props {
  title: string;
  dataFile: string;
  description?: string;
}

const { title, dataFile, description } = Astro.props;

// Fetch data at build time from the public directory
const dataPath = path.join(process.cwd(), 'public', 'data', dataFile);
const rawData = fs.readFileSync(dataPath, 'utf-8');
const data = JSON.parse(rawData);

// transform data to chart format
const chartItems: ChartItem[] = [];
for (const [className, classSpecs] of Object.entries(data.results)) {
  for (const [specName, specData] of Object.entries(classSpecs)) {
    chartItems.push({
      label: specName,
      sublabel: className,
      value: (specData as any).dps,
      category: className
    });
  }
}

const metadata = data.metadata;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} - WoW MoP Rankings</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #282828;
        color: #ffffff;
      }
      
      .page-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }
      
      .page-header {
        text-align: center;
        margin-bottom: 30px;
      }
      
      .page-title {
        color: var(--highlight-color);
        margin-bottom: 10px;
      }
      
      .page-description {
        color: #aaaaaa;
        font-size: 1.1em;
      }
    </style>
  </head>
  <body>
    <div class="page-container">
      <div class="page-header">
        <h1 class="page-title">{title}</h1>
        {description && <p class="page-description">{description}</p>}
      </div>
      
      <SimulationMetadata metadata={metadata} />
      <HorizontalBarChart items={chartItems} />
      
    </div>
  </body>
</html>
