---
// main layout for all challenge mode leaderboards
import PageLayout from "../components/PageLayout.astro";
import FilterPanel from "../components/islands/FilterPanel.astro";
import LeaderboardTable from "../components/islands/LeaderboardTable.astro";
import { getDungeonName } from "../lib/wow-constants.ts";
import { buildStaticLeaderboardPath } from "../lib/utils.ts";
import PlayerLeaderboard from "../components/islands/PlayerLeaderboard.astro";
import PlayerFilterPanel from "../components/islands/PlayerFilterPanel.astro";
import "../styles/components.scss";

export interface Props {
  initialLeaderboardType?: string;
  initialRegion?: string;
  initialRealm?: string;
  initialDungeon?: string;
}

const {
  initialLeaderboardType = "dungeon",
  initialRegion = "global",
  initialRealm = "",
  initialDungeon = "2",
} = Astro.props;

// let the user make selections first
let initialData: any = undefined;
let pageTitle = "Challenge Mode Leaderboards";
let dungeonName = "";

// load initial data if we have meaningful URL parameters
if (
  initialLeaderboardType === "dungeon" &&
  initialRegion &&
  initialRegion !== "global" &&
  initialRealm &&
  initialDungeon &&
  initialDungeon !== "2"
) {
  try {
    dungeonName = getDungeonName(parseInt(initialDungeon));
    pageTitle = `${dungeonName} - ${initialRegion === "global" ? "Global" : initialRegion.toUpperCase()} Leaderboard`;

    // load initial leaderboard data from static files
    const staticPath = buildStaticLeaderboardPath(
      initialRegion,
      initialRealm || "all",
      parseInt(initialDungeon),
      1,
    );
    const origin = Astro.url?.origin || Astro.site || "";
    console.log(`[Leaderboard] Fetching: ${origin}${staticPath}`);
    console.log(`[Leaderboard] Origin: ${origin}`);
    console.log(`[Leaderboard] Static path: ${staticPath}`);

    const response = await fetch(`${origin}${staticPath}`);
    console.log(`[Leaderboard] Response status: ${response.status}`);

    if (response.ok) {
      initialData = await response.json();
      console.log(`[Leaderboard] Data loaded successfully`);
    } else {
      console.warn(
        `[Leaderboard] Static leaderboard file not found (${response.status}):`,
        staticPath,
      );
      initialData = undefined;
    }
  } catch (error) {
    console.error("Failed to load initial leaderboard data:", error);
    initialData = undefined;
  }
}
---

<PageLayout
  title={pageTitle}
  description={`Challenge Mode leaderboards for ${dungeonName || "MoP Classic dungeons"}`}
  pageTitle={pageTitle}
>
  <div class="challenge-mode-layout">
    <!-- Header Section -->
    <header class="challenge-header">
      <div class="header-content">
        <h1 class="page-title">Challenge Mode Leaderboards</h1>
      </div>
    </header>

    <!-- Navigation Tabs -->
    <nav class="leaderboard-nav">
      <div class="nav-tabs">
        <button
          class={`nav-tab ${initialLeaderboardType === "dungeon" ? "active" : ""}`}
          data-type="dungeon"
        >
          Dungeons
        </button>
        <button
          class={`nav-tab ${initialLeaderboardType === "players" ? "active" : ""}`}
          data-type="players"
        >
          Players
        </button>
      </div>
    </nav>

    <main class="challenge-content">
      <section
        id="dungeon-section"
        class={`content-section ${initialLeaderboardType === "dungeon" ? "active" : "hidden"}`}
      >
        <div class="section-header">
          <h2>Dungeon Leaderboards</h2>
        </div>

        <FilterPanel
          initialRegion={initialRegion}
          initialRealm={initialRealm}
          initialDungeon={initialDungeon}
        />

        <LeaderboardTable
          initialData={initialData}
          region={initialRegion}
          realm={initialRealm || ""}
          dungeon={initialDungeon}
          dungeonName={dungeonName}
        />
      </section>

      <section
        id="players-section"
        class={`content-section ${initialLeaderboardType === "players" ? "active" : "hidden"}`}
      >
        <div class="section-header">
          <h2>Player Rankings</h2>
        </div>

        <div class="player-leaderboard-wrapper">
          <PlayerFilterPanel />
          <PlayerLeaderboard />
        </div>
      </section>
    </main>
  </div>

  <script type="module">
    // tab switching functionality
    class LeaderboardTabs {
      constructor() {
        console.log("[INFO] LeaderboardTabs initialized");
        this.bindEvents();
        this.updateActiveSection();
        this.setupPopstateHandler();
      }

      bindEvents() {
        const navTabs = document.querySelectorAll(".nav-tab");
        console.log("[INFO] Binding tab events to", navTabs.length, "tabs");

        navTabs.forEach((tab) => {
          tab.addEventListener("click", (e) => {
            e.preventDefault();
            const el = e.currentTarget;
            const type = el && el.getAttribute
              ? el.getAttribute("data-type")
              : undefined;
            console.log("[INFO] Tab clicked:", type);
            if (type) this.switchTab(type);
          });
        });
      }

      switchTab(type, updateHistory = true) {
        console.log(
          "[INFO] Switching to tab:",
          type,
          "updateHistory:",
          updateHistory,
        );

        // update active tab
        document.querySelectorAll(".nav-tab").forEach((tab) => {
          const htmlTab = tab;
          const t =
            htmlTab && htmlTab.dataset ? htmlTab.dataset.type : undefined;
          htmlTab.classList.toggle("active", t === type);
        });

        // update active section
        document.querySelectorAll(".content-section").forEach((section) => {
          const el = section;
          if (el.id === `${type}-section`) {
            el.classList.remove("hidden");
            el.classList.add("active");
            console.log("[INFO] Showing section:", section.id);
          } else {
            el.classList.add("hidden");
            el.classList.remove("active");
            console.log("[INFO] Hiding section:", section.id);
          }
        });

        // update URL only if not responding to browser navigation
        if (updateHistory) {
          if (type === "players") {
            const current = window.location.pathname + window.location.search;
            let newURL = current;
            if (!current.startsWith("/challenge-mode/players")) {
              // Try to restore last players URL from sessionStorage, else derive from current filter state
              const last = sessionStorage.getItem("lastPlayersPath");
              if (last && last.startsWith("/challenge-mode/players")) {
                newURL = last;
              } else {
                // Build from client state if available
                const w = window;
                const pl = (w).playerLeaderboard;
                if (pl) {
                  const scope = pl["scope"] || "global";
                  const region = (pl["region"] || "").toLowerCase();
                  const realm = (pl["realmSlug"] || "").toLowerCase();
                  const cls = (pl["classKey"] || "").toLowerCase();
                  if (scope === "global") newURL = `/challenge-mode/players/global${cls ? "/" + cls : ""}`;
                  else if (scope === "regional") newURL = `/challenge-mode/players/${region}${cls ? "/" + cls : ""}`;
                  else newURL = `/challenge-mode/players/${region}/${realm}${cls ? "/" + cls : ""}`;
                } else {
                  newURL = "/challenge-mode/players";
                }
              }
            }
            console.log("[INFO] Switching to players URL:", newURL);
            window.history.pushState({}, "", newURL);
          } else if (type === "dungeon") {
            // If currently on any players path, remember it and go to base dungeon URL
            const currentPath = window.location.pathname + window.location.search;
            if (currentPath.startsWith("/challenge-mode/players")) {
              try { sessionStorage.setItem("lastPlayersPath", currentPath); } catch {}
              const newURL = "/challenge-mode";
              console.log("[INFO] Switching to dungeon URL:", newURL);
              window.history.pushState({}, "", newURL);
            } else {
              // preserve specific dungeon URLs if already there
              console.log("[INFO] Preserving specific dungeon URL:", currentPath);
            }
          }
        } else {
          console.log(
            "[INFO] Not updating history - responding to browser navigation",
          );
        }

        // load content if needed
        this.loadSectionContent(type);
      }

      updateActiveSection(fromPopstate = false) {
        const path = window.location.pathname;
        console.log(
          "[INFO] Current path:",
          path,
          "fromPopstate:",
          fromPopstate,
        );

        if (path.includes("/players")) {
          console.log("[INFO] Activating players tab from URL");
          this.switchTab("players", !fromPopstate);
        } else {
          console.log("[INFO] Activating dungeon tab from URL");
          this.switchTab("dungeon", !fromPopstate);
        }
      }

      setupPopstateHandler() {
        window.addEventListener("popstate", () => {
          console.log(
            "[INFO] LeaderboardTabs popstate event - URL changed to:",
            window.location.href,
          );
          this.updateActiveSection(true);
        });
      }

      async loadSectionContent(type) {
        console.log("[INFO] Loading section content for:", type);

        if (type === "players") {
          // notify PlayerLeaderboard component that it's now visible
          console.log("[INFO] PlayerLeaderboard section is now visible");

          const tryRefresh = () => {
            const pl = window && window["playerLeaderboard"];
            if (pl && typeof pl.refreshCurrentPage === "function") {
              console.log(
                "[INFO] Refreshing PlayerLeaderboard after tab switch",
              );
              pl.refreshCurrentPage();
              return true;
            }
            return false;
          };

          // attempt immediately, if not ready, try to kick init and wait for ready event
          if (!tryRefresh()) {
            console.warn(
              "[WARN] PlayerLeaderboard not ready, waiting for event...",
            );
            try {
              const maybeInit = window["__initPlayerLeaderboard"];
              if (typeof maybeInit === "function") {
                console.log("[INFO] Invoking __initPlayerLeaderboard()");
                maybeInit();
              }
            } catch {}
            const onReady = () => {
              window.removeEventListener("playerLeaderboard:ready", onReady);
              tryRefresh();
            };
            window.addEventListener("playerLeaderboard:ready", onReady, {
              once: true,
            });
          }
        }
      }
    }

    // initialize when DOM is ready
    document.addEventListener("DOMContentLoaded", () => {
      new LeaderboardTabs();
    });
  </script>

  <!-- ensure Player Leaderboard client module is loaded regardless of tab timing -->
  <script src="../client/player-leaderboard.ts"></script>
