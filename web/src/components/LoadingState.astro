---
export interface Props {
  message?: string;
  type?: "loading" | "error";
  mode?: "overlay" | "inline";
  size?: "small" | "normal" | "large";
  class?: string;
}

const {
  message,
  type = "loading",
  mode = "inline",
  size = "normal",
  class: className,
} = Astro.props;
---

<div class={`loading-state ${type} ${mode} ${size} ${className || ""}`.trim()}>
  {type === "loading" && <div class="loading-spinner" />}
  <p class="loading-message">
    {message || (type === "error" ? "An error occurred" : "Loading...")}
  </p>
</div>

<style>
  .loading-state {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }

  /* Base inline styles */
  .loading-state.inline {
    padding: 40px 20px;
    margin: 20px 0;
    background-color: var(--bg-secondary);
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  /* Overlay styles */
  .loading-state.overlay {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: var(--bg-secondary);
    border-radius: 8px;
    z-index: 1000;
    min-width: 200px;
    padding: 20px;
    border: 1px solid var(--border-color);
  }

  /* Size variations */
  .loading-state.small {
    padding: 15px;
    gap: 8px;
  }

  .loading-state.large {
    padding: 60px 40px;
    gap: 20px;
  }

  /* Type variations */
  .loading-state.loading {
    color: var(--text-muted);
  }

  .loading-state.error {
    color: #ff6666;
    border-color: #ff4444;
    background-color: rgba(255, 0, 0, 0.1);
  }

  .loading-state.error.overlay {
    background-color: #3a2a2a;
    border-color: var(--highlight-color);
    color: var(--highlight-color);
  }

  /* Spinner variations */
  .loading-spinner {
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  .loading-state.small .loading-spinner {
    width: 16px;
    height: 16px;
    border: 2px solid var(--border-color);
    border-top: 2px solid var(--highlight-color);
  }

  .loading-state.normal .loading-spinner {
    width: 24px;
    height: 24px;
    border: 2px solid var(--border-color);
    border-top: 2px solid var(--highlight-color);
  }

  .loading-state.large .loading-spinner {
    width: 32px;
    height: 32px;
    border: 3px solid var(--border-color);
    border-top: 3px solid var(--highlight-color);
  }

  /* Message variations */
  .loading-message {
    margin: 0;
  }

  .loading-state.small .loading-message {
    font-size: 0.85em;
  }

  .loading-state.normal .loading-message {
    font-size: 1em;
  }

  .loading-state.large .loading-message {
    font-size: 1.2em;
  }

  .hidden {
    display: none;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
